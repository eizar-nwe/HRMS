@model IList<AttendanceMasterViewModel>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<h1> Attendance Master Information</h1>

@if (TempData["Msg"] != null && !Convert.ToBoolean(TempData["IsErrorOccur"]))
{
    <div class="alert alert-success" role="alert">
        <span>@TempData["Msg"]</span>
    </div>
}
else if (TempData["Msg"] != null)
{
    <div class="alert alert-danger" role="alert">
        <span>@TempData["Msg"]</span>
    </div>
}

<table class="table" id="AttMstrTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Attendance Date</th>
            <th scope="col">InTime</th>
            <th scope="col">OutTime</th>
            <th scope="col">Employee</th>
            <th scope="col">Department</th>
            <th scope="col">Shift</th>
            <th scope="col">IsLate</th>
            <th scope="col">IsEarlyOut</th>
            <th scope="col">IsLeave</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(Model.IndexOf(item) + 1)</th>
                <td>@item.AttendanceDate.ToString("yyyy-MM-dd")</td>
                <td>@item.InTime</td>
                <td>@item.OutTime</td>
                <td>@item.EmployeeInfo</td>
                <td>@item.DepartmentInfo</td>
                <td>@item.ShiftInfo</td>
                <td>@item.IsLate</td>
                <td>@item.IsEarlyOut</td>
                <td>@item.IsLeave</td>
                <td>
                    <a href="/AttendanceMaster/Edit?id=@item.Id" class="btn btn-success" role="button">Edit</a>
                    <a href="/AttendanceMaster/Delete?id=@item.Id" class="btn btn-danger" role="button" onclick="return confirm('Are you sure to delete this record?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function(){
        $("#AttMstrTable").DataTable();
    });
</script>
