@model IList<PayrollViewModel>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<h1> Payroll Information</h1>

@if (TempData["Msg"] != null && !Convert.ToBoolean(TempData["IsErrorOccur"]))
{
    <div class="alert alert-success" role="alert">
        <span>@TempData["Msg"]</span>
    </div>
}
else if (TempData["Msg"] != null)
{
    <div class="alert alert-danger" role="alert">
        <span>@TempData["Msg"]</span>
    </div>
}

<table class="table" id="PayrollTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">FromDate</th>
            <th scope="col">ToDate</th>            
            <th scope="col">Employee</th>
            <th scope="col">Department</th>
            <th scope="col">IncomeTax</th>
            <th scope="col">GrossPay</th>
            <th scope="col">NetPay</th>
            <th scope="col">Allowance</th>
            <th scope="col">Deduction</th>
            <th scope="col">AttendanceDays</th>
            <th scope="col">AttendanceDeduction</th>
            <th scope="col">PayPerDay</th>            
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(Model.IndexOf(item) + 1)</th>
                <td>@item.FromDate.ToString("yyyy-MM-dd")</td>
                <td>@item.ToDate.ToString("yyyy-MM-dd")</td>                
                <td>@item.EmployeeInfo</td>
                <td>@item.DepartmentInfo</td>
                <td>@item.IncomeTax</td>
                <td>@item.GrossPay</td>
                <td>@item.NetPay</td>
                <td>@item.Allowance</td>
                <td>@item.Deduction</td>
                <td>@item.AttendanceDays</td>
                <td>@item.AttendanceDeduction</td>
                <td>@item.PayPerDay</td>
                <td>
                    <a href="/payroll/Edit?id=@item.Id" class="btn btn-success" role="button">Edit</a>
                    <a href="/payroll/Delete?id=@item.Id" class="btn btn-danger" role="button" onclick="return confirm('Are you sure to delete this record?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#PayrollTable").DataTable();
    });
</script>
